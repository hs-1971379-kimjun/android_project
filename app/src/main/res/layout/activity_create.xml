<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_border"
    tools:context=".Activity.CreateActivity">

    <TextView
        android:id="@+id/Maintext"
        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_marginBottom="110dp"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167" />

    <EditText
        android:id="@+id/createEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:hint="이메일 형식으로 입력하세요"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <EditText
        android:id="@+id/createPWD"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:hint="4자리 이상을 입력하세요"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createEmail"
        app:layout_constraintVertical_bias="0.086" />

    <EditText
        android:id="@+id/create_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:hint="이름을 입력하세요"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createEmail"
        app:layout_constraintVertical_bias="0.427" />


    <EditText
        android:id="@+id/create_birth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:hint="8자리를 입력하세요"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createEmail"
        app:layout_constraintVertical_bias="0.751" />

    <Button
        android:id="@+id/CreateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:backgroundTint="#1388FF"
        android:gravity="center"
        android:text="생성"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPWD"
        app:layout_constraintVertical_bias="0.885" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/createEmail"
        app:layout_constraintBottom_toBottomOf="@+id/createEmail"
        app:layout_constraintTop_toTopOf="@+id/createEmail" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="237dp"
        app:layout_constraintEnd_toStartOf="@+id/createPWD"
        app:layout_constraintBottom_toBottomOf="@+id/createPWD"
        app:layout_constraintTop_toTopOf="@+id/createPWD"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="299dp"
        app:layout_constraintEnd_toStartOf="@+id/create_name"
        app:layout_constraintBottom_toBottomOf="@+id/create_name"
        app:layout_constraintTop_toTopOf="@+id/create_name"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생일"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="353dp"
        app:layout_constraintEnd_toStartOf="@+id/create_birth"
        app:layout_constraintBottom_toBottomOf="@+id/create_birth"
        app:layout_constraintTop_toTopOf="@+id/create_birth"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1388FF"
        android:gravity="center"
        android:text="뒤로가기"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/CreateButton"
        app:layout_constraintTop_toTopOf="@+id/CreateButton"
        app:layout_constraintBottom_toBottomOf="@+id/CreateButton"
        android:layout_marginStart="8dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CreateButton" />

</androidx.constraintlayout.widget.ConstraintLayout>